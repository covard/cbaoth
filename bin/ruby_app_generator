#!/usr/bin/env ruby

require 'ruby_app_generator'
require 'ruby_app_generator/version'

app_name = ARGV.first

if app_name == '--help'
  puts
  puts "ruby_app_generator v#{RubyAppGenerator::VERSION}"
  puts 'Author: Curtis Ovard'
  puts "=" * 50
  puts
  puts 'The ruby_app_generator creates a base ruby app, this layout is my base automation layout.'
  puts 'To create your app simply type the following from the command line. (replace my_app_name with your ruby app name)'
  puts 'It will generate a base ruby app within your current directory.'
  puts
  puts "\t $ ruby_app_generator my_app_name"
else
  gen = RubyAppGenerator::Generator.new
  gen.generate app_name
end